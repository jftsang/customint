[core]
    editor = vim

[user]
# Please adapt and uncomment the following lines:
name = J. M. F. Tsang
email = j.m.f.tsang@cantab.net

[init]
	defaultBranch = main

[log]
    decorate = full

[alias]
    praise = blame
    an = annotate
    who = annotate
    lg = log --graph --oneline --decorate origin/main HEAD
    lga = log --graph --oneline --decorate --all
    lgs = log --graph --oneline --decorate --stat
    lgas = lgs --all
    logs = log --stat
    logg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    in = status
    ss = status
    st = status --short --branch
    sh = show --oneline --stat
    df = diff --stat
    br = branch -vva
    co = checkout

[diff]
	tool = vimdiff
    mergetool = vimdiff
# [core]
#	autocrlf = true
[core]
	whitespace = cr-at-eol

[pull]
    ff = only
